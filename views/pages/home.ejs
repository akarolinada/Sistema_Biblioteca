<div class="container">
  <h1 class='text-center mt-4'>Livros</h1>
  <div class="row">
    <div class="col">
      <div class="row mt-5">      
      <div class="container">
        <div class="row">
          <% livro_item.forEach(function(livro) { %>
          <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card mt-5" style="width: 14rem">
              <img src="public/img/<%= livro.foto%>" class="card-img-top" />
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Nome: <%= livro.nome %></li>
                <li class="list-group-item">Autor: <%= livro.autor %></li>
                <li class="list-group-item">Genero: <%= livro.genero %></li>
                <li class="list-group-item">Ano: <%= livro.ano %></li>
                <li class="list-group-item">Editora: <%= livro.editora %></li>
              </ul>
              <a href="/inserirEmprestimo/<%= livro._id %>"  class="btn btn-sm btn-dark">Selecionar</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>
